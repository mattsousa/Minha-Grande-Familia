<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/birthday_imvw_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/birthday_imvw_photo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/birthday_imvw_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/birthday_imvw_photo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="187dp">

            <TextView
                android:id="@+id/birthday_txw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/birthday_txw_parentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parentage"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/birthday_txw_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="168dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>